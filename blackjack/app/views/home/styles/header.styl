  padding: 5px
  font-size: 24px
  background-color: #fff
  border-bottom: 2px solid #427684
  font-weight: 300
  font-size: 1.25rem
  line-height: 1.2

  &-link
    display: inline-block
    text-decoration: none
    padding: 4px 15px

    &.last-link
      padding-left: 9px;

  ul
