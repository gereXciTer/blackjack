.new-desk
  width: 300px
  margin: 0 auto
  overflow: visible
  position: relative
  .steps
    list-style: none
    white-space: nowrap
    position: absolute
    left: 0
    transition: all .5s ease-in-out
    li
      display: inline-block
      &>div
        margin: 2em
        position: relative
        &.dimmed
          &::after
          	content: ' '
            position: absolute
            width: 100%
            height: 100%
            left: 0
            top: 0
            background-color: white
            opacity: 0.75

