.mail-prompt
  white-space: normal
  font-size: 0.8em
  text-align: center
  display: block
  margin-bottom: 1em
.new-desk
  width: 400px
  margin: 2em auto
  overflow: visible
  position: relative
  .steps
  	margin: 0
    padding: 0
    list-style: none
    white-space: nowrap
    position: absolute
    left: 0
    height: 100%
    transition: all .5s ease-in-out
    overflow: hidden
    &>li
      display: block
      float: left
      height: 100%
      &>div
      	text-align: center
      	height: 100%
        width: 300px
        margin: 0 2em
        position: relative
        &.dimmed
        	.wizard-buttons
          	opacity: 0
        	&::after
            content: ' '
            position: absolute
            width: 100%
            height: 100%
            left: 0
            top: 0
            background-color: white
            opacity: 0.75
        ul
        	list-style: none
          margin: 1em 0
          padding: 0
          text-align: left
          position: relative
          max-height: 70%
          overflow: auto
          li input[type="text"]
	          margin: 0.2em 0
            width: 100%
.login-btn
	padding: 0.1em 0.5em
	vertical-align: top
  margin-left: 0.5em

.decks label
	display: block
  margin: 0 auto
  width: 200px
  position: relative
  cursor: pointer
  .sel
	  transition: all .5s ease-in-out
  	opacity: 0
    display: block
    position: absolute
    width: 100%
    height: 100%
    top: 0
    left: 0
    border: 2px solid #377ece
    box-shadow: #377ece 0 0 10px
    background: rgba(55, 126, 206, 0.3)
    border-radius: 3px
.decks label input
  display: none
  &:checked + .sel
	  opacity: 1
    
  
.wizard-buttons
	opacity: 1
	position: absolute
  bottom: 0.5em
  width: 100%
  text-align: center
  transition: all .5s ease-in-out
  a
  	margin: 0 2em