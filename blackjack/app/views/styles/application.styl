// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

// Apply a natural box layout model to all elements.
// http://paulirish.com/2012/box-sizing-border-box-ftw/
*
  box-sizing: border-box

.error
	border: 2px solid #FCBCBC
  box-shadow: #FFD2D2 0 0 10px
  
.outer-page-container
	height: 100%
  width: 100%
  position: relative
  
.site-footer
	position: relative
  bottom: 0
  width: 100%
  border-top: 1px solid black
  font-size: 0.8em
  padding: 0.5em 1em
  
.outer-page-container
	.loading-overlay
		position fixed
		top 0
		left 100%
		width 0%
		height 100%
		background-color rgba(0,0,0,0);
		transition: background-color .5s linear, left 0s linear .5s, width 0s linear .5s
		z-index 1030
		&.loading
    	display: block
      width 100%
      left 0
      transition: background-color 0s linear
      background-color rgba(0,0,0,0.75)

.outer-page-container .loading-overlay.loading .loader
	display block

.loader
	height: 10em
	width: 10em
	position: fixed
	display: none
	opacity: 0.75
	top: 50%
	left: 50%
	margin-left: -5em
	margin-top: -5em
	border-bottom: 6px solid rgba(255, 255, 255, .1)
	border-left: 6px solid rgba(255, 255, 255, .1)
	border-right: 6px solid rgba(255, 255, 255, .1)
	border-top: 6px solid rgba(255, 255, 255, .4)
	border-radius: 100%
	animation: rot .6s infinite linear

@keyframes rot
	from
		transform: rotate(0deg)
		-ms-transform: rotate(0deg)
	to
		transform: rotate(359deg)
		-ms-transform: rotate(359deg)
