
.desk-view
  width: 90%
  min-width: 600px
  margin: 0 auto
  margin-bottom: 2em
  .desk-name
  	margin: 0.2em 0
    text-align: center

.desk-view .participants
  padding: .5em
  background: #eee
  ul
    font-size: 0.8em
    margin: 0
    padding: 0
    list-style: none
    li
      display: inline-block
      padding: 0.2em
      margin-right: 1em

.stories-list-wrapper
	position: relative
  
#newStory
	margin-top: 1em
	display: block
  padding: 0.5em
  width: 100%
  
#submitNewStory
  position: absolute
  right: 0.5em
  bottom: 0.375em
  
.stories-list      
	padding: 0
  margin: 0
  list-style: none
.story
	border: 1px solid #eee
  padding: 0.5em
  .btn
  	float: right
  h4
  	margin: 0.2em 0.5em
