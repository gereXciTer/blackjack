
.desk-view
  width: 90%
  min-width: 600px
  margin: 0 auto
  margin-bottom: 2em
  .desk-name
  	margin: 0.2em 0
    text-align: center

.desk-view .participants
  padding: .5em
  background: #eee
  ul
    font-size: 0.8em
    margin: 0
    padding: 0
    list-style: none
    li
      display: inline-block
      text-align: center
      margin-right: 1em
      span
      	display: block
	      text-align: center
	      padding: 0.2em 0.5em
	      border-radius: 0.2em
      &.online
      	span
      		background-color: #a7f2a7

.stories-list-wrapper
	position: relative
  
#newStory
	margin-top: 1em
	display: block
  padding: 0.5em
  width: 100%
  
#submitNewStory
  position: absolute
  right: 0.5em
  bottom: 0.375em
  
.stories-list      
	padding: 0
  margin: 0
  list-style: none
.story
	border: 1px solid #eee
  padding: 0.5em
  h4
  	margin: 0.2em 0.5em
  .btn,.estimation
  	float: right
  .estimation
  	padding: 0.1em 0.5em
  	border: 2px solid #a7f2a7
  	border-radius: 50%
    font-weight: bold
    
.story input.btn
  font-weight: normal
  width: 6em
  margin-left: 1em
  &:hover
  	background: none
    color: black

.cards
	margin: 0
  padding: 0
  list-style: none
  li
  	display: inline-block
  
.cards label, .votes-list label
	display: inline-block
  width: 75px
  height: 128px
  background-size: contain
  margin: 0 auto
  margin-right: 0.5em
 	border: 2px solid #eee
  position: relative
  cursor: pointer
  .sel
	  transition: all .5s ease-in-out
  	opacity: 0
    display: block
    position: absolute
    width: 100%
    height: 100%
    border: 2px solid #377ece
    box-shadow: #377ece 0 0 10px
    background: rgba(55, 126, 206, 0.3)
    border-radius: 3px
.cards label input
  display: none
  &:checked + .sel
	  opacity: 1

.votes-list
	margin: 0
  padding: 0
  list-style: none
  .vote
  	display: inline-block
    width: 75px
  	
